<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Berkelas" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="floatingActionButtonStyle">@style/Widget.Berkelas.FloatingActionButton</item>
        <item name="buttonStyle">@style/Widget.Berkelas.Button</item>
        <item name="textInputStyle">@style/Widget.Berkelas.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/Widget.Berkelas.BottomSheetDialog</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Berkelas.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Berkelas.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Berkelas.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Berkelas.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Berkelas.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Berkelas.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Berkelas.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Berkelas.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Berkelas.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Berkelas.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Berkelas.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Berkelas.Overline</item>
        <item name="textAppearanceButton">@style/TextAppearance.Berkelas.Button</item>
    </style>
    <style name="Theme.Berkelas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Berkelas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Berkelas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Surface</item>
    </style>
</resources>