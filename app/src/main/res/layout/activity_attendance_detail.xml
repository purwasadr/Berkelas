<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="an"
            type="" />
    </data>
    
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.attendancedetail.AttendanceDetailActivity">

        <include
            android:id="@+id/appbar"
            layout="@layout/content_appbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_count_presence_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@color/green_500"
                    app:layout_constraintEnd_toEndOf="@+id/ll_presence"
                    app:layout_constraintStart_toStartOf="@+id/ll_presence"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="4" />

                <LinearLayout
                    android:id="@+id/ll_presence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_count_presence_val">

                    <ImageView
                        android:id="@+id/img_check_presence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_round_check_circle_24"
                        app:tint="@color/green_500" />

                    <TextView
                        android:id="@+id/tv_count_presence_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        tools:text="Presence" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_count_permission_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@color/blue_500"
                    app:layout_constraintEnd_toEndOf="@+id/ll_permission"
                    app:layout_constraintStart_toStartOf="@+id/ll_permission"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="4" />

                <LinearLayout
                    android:id="@+id/ll_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/ll_presence"
                    app:layout_constraintTop_toBottomOf="@+id/tv_count_presence_val">

                    <ImageView
                        android:id="@+id/img_check_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_round_check_circle_24"
                        app:tint="@color/blue_500" />

                    <TextView
                        android:id="@+id/tv_count_permission_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        tools:text="Permission" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_count_sick_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="@color/red_500"
                    app:layout_constraintEnd_toEndOf="@+id/ll_sick"
                    app:layout_constraintStart_toStartOf="@+id/ll_sick"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="4" />

                <LinearLayout
                    android:id="@+id/ll_sick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/ll_permission"
                    app:layout_constraintTop_toBottomOf="@+id/tv_count_presence_val">

                    <ImageView
                        android:id="@+id/img_check_sick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_round_check_circle_24"
                        app:tint="@color/red_500" />

                    <TextView
                        android:id="@+id/tv_count_sick_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Sick"
                        android:textAppearance="?attr/textAppearanceSubtitle2" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_attendance_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_permission" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
